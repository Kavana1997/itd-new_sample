pipeline{
    agent{
        label "master"
    }
    triggers{
        pollscm('* * * * *')
    }
    stages{
        stage('stage1'){
            steps{
                catchError(stageResult: 'FAILURE', buildResult: 'SUCCESS'){
                    echo "exicution failure"
                    sh 'exit 1'
                }
            }
        }
        stage('stage2'){
            steps{
                echo "stage2 is exicuted"
            }
        }
    }
}