boolean testStatus=true
pipeline{
    agent any
    triggers{
        pollscm('*/1 * * * *')
    }
     
    stages{
        stage('checkout'){
            steps{
                echo "this is successful"
            }
        }
        stage('test'){
            steps{
                try{
                    echo "running the test cases"
                    sh 'sleep 5'
                    sh 'exit 1'
                }
                catch() {
                    echo "got an exception need to handle it"
                    testStatus=false
                }
            }
        }

        stage('deploy'){
            steps{
                script{
                    if(testStatus==true){
                        echo "sucessfully deployed"
                    }
                    else{
                        echo "skipping "
                    }
                }
            }
        }

        stage('notification'){
            steps{
                script{
                    if(testStatus==false){
                        echo "sucessfully send notification"
                    }
                    else{
                        echo "skipping "
                    }
                }
            }
            
        }
    }
}