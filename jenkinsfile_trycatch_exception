boolean testStatus = true
pipeline{
    agent any
    triggers{
        pollSCM('* * * * *')
    }
     
    stages{
        stage('checkout'){
            steps{
                echo "this is successful"
            }
        }
        stage('test'){
            steps{
                script{
                    try{
                        echo "running the test cases"
                        sh "sleep 5"
                        exit 1
                    }catch(Exception e) {
                        echo "got an exception need to handle it"
                        echo "$e"
                        testStatus = false
                    }
                }
            }
        }

        stage('deploy'){
            steps{
                script{
                    if(testStatus){
                        echo "sucessfully deployed"
                    }
                    else{
                        echo "skipping "
                    }
                }
            }
        }

        stage('notification'){
            steps{
                script{
                    if(!testStatus){
                        echo "sucessfully send notification"
                    }
                    else{
                        echo "skipping "
                    }
                }
            }
            
        }
    }
}